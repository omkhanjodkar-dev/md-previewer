{
  "name": "markdown-preview-webapp",
  "private": true,
  "version": "0.0.0",
  "main": "electron.js",
  "type": "module",
  "bin": {
    "openmd": "./bin/openmd.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "electron-build": "vite build && electron-builder",
    "start": "electron.cmd ."
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^16.5.0",
    "vite": "^5.3.1"
  },
  "build": {
    "appId": "com.example.markdownpreviewer",
    "productName": "Markdown Previewer",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "fileAssociations": [
        {
          "ext": "md",
          "name": "Markdown File",
          "description": "Markdown Document",
          "role": "Editor",
          "icon": "build/icon.ico"
        },
        {
          "ext": "markdown",
          "name": "Markdown File",
          "description": "Markdown Document",
          "role": "Editor",
          "icon": "build/icon.ico"
        }
      ]
    }
  }
}
